<div id="serviceMenu" class="container">
    <div class="row">
        <form id="form" class="col s12">
            <h4>Cadastro de Serviço</h4>
            <div class="row">
                <input type="hidden" id="serviceId" name="serviceId">
                <div class="input-field col s6">
                    <i class="material-icons prefix">build</i>
                    <input id="name" name="name" type="text" data-label="Nome do Serviço" class="validate">
                    <label for="name">Nome do Serviço</label>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">attach_money</i>
                    <input id="price" name="price" type="number" data-label="Preço" class="validate">
                    <label for="price">Preço</label>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">schedule</i>
                    <input id="duration" name="duration" type="text" data-label="Duração" class="validate">
                    <label for="duration">Duração</label>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">description</i>
                    <input id="description" name="description" type="text" data-label="Descrição" class="validate">
                    <label for="description">Descrição</label>
                </div>
            </div>
            <div class="input-field col s3">
                <a onclick="salvarService()" id="btn_salvarService" class="waves-effect waves-light btn">Enviar</a>
            </div>
            <div class="col s3">
                <a onclick="cancelarService()" id="btn_voltarService" class="waves-effect waves-light btn">Cancelar</a>
            </div>
        </form>
    </div>

    <div id="table">
        <div class="adjust-title">
            <div class="col s12">
                <h4>Lista de Serviços</h4>
                <a onclick="mostrarFormService()" class="waves-effect waves-light btn"><i class="material-icons left">add</i>Novo</a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Duração</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody id="service_list">
                    <!-- os dados virão do JS via DOM -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Visualização de Serviço -->
<div id="modalService" class="modal">
    <div class="modal-content">
        <h4>Detalhes do Serviço</h4>
        <p><b>Nome:</b> <span id="serviceNome"></span></p>
        <p><b>Preço:</b> R$<span id="servicePrice"></span></p>
        <p><b>Duração:</b> <span id="serviceDuration"></span></p>
        <p><b>Descrição:</b> <span id="serviceDescription"></span></p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn">Fechar</a>
    </div>
</div>

<script src="/js/services.js" defer></script>
