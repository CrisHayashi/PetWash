<!--Layout principal banner-->
<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <br><br>
    <h1 class="header center orange-text">PetShop</h1>
    <div class="row center">
      <h5 class="header col s12 light">Seu pet merece o melhor!</h5>
    </div>
    <div class="row center">
      <a href="#servicos" class="btn-large waves-effect waves-light orange">Confira nossos serviços</a>
    </div>

    <!-- Seção de Serviços -->
    <div class="container">
      <h3 class="center-align">Serviços Populares</h3>
      <div class="row">
        <% services.forEach(service => { %>
          <div class="col s12 m4 l3">
            <div class="card">
              <div class="card-image">
                <img src="<%= service.image %>" alt="<%= service.name %>">
              </div>
              <div class="card-content">
                <span class="card-title"><%= service.name %></span>
                <p><%= service.description %></p>
              </div>
              <div class="card-action">
                <a href="#" class="modal-trigger" data-target="modalAgendamento<%= service.id %>">Agendar</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Seção de Produtos -->
    <div class="container">
      <h3 class="center-align">Produtos em Destaque</h3>
      <div class="row">
        <% products.forEach(product => { %>
          <div class="col s12 m4 l3">
            <div class="card">
              <div class="card-image">
                <img src="<%= product.image %>" alt="<%= product.name %>">
              </div>
              <div class="card-content">
                <span class="card-title"><%= product.name %></span>
                <p><%= product.price %></p>
              </div>
              <div class="card-action">
                <a href="#">Comprar Agora</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Modal de Aviso ou Promoção -->
    <div id="modalPromo" class="modal">
      <div class="modal-content">
        <h4>Promoção Especial!</h4>
        <p>Aproveite 10% de desconto em todos os brinquedos para pets! Não perca essa oportunidade.</p>
      </div>
      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Fechar</a>
      </div>
    </div>
    <div id="loader" style="display:none;">Carregando...</div>
      <br><br>
  </div>
</div>